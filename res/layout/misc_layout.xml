<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingTop="@dimen/preview_paddingVertical"
    android:paddingLeft="@dimen/preview_paddingHorizontal"
    android:paddingRight="@dimen/preview_paddingHorizontal"
    android:paddingBottom="@dimen/preview_paddingVertical" >

    <LinearLayout
        android:layout_width="@dimen/preview_layout_width"
        android:layout_height="@dimen/preview_layout_height"
        android:layout_gravity="center"
        android:background="@drawable/ic_phone"
        android:paddingLeft="@dimen/preview_imageview_marginHorizontal"
        android:paddingRight="@dimen/preview_imageview_marginHorizontal"
        android:paddingTop="@dimen/preview_imageview_marginVertical"
        android:paddingBottom="@dimen/preview_imageview_marginVertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:tint="@color/tenx_accent"
            android:src="@drawable/ic_settings_misc" />

    </LinearLayout>
</LinearLayout>
